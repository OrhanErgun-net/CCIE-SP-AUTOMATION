<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{$DEVICE}</name>
      <config>
        <interface xmlns="urn:ios">
          <Vlan>
            <name>{$VLAN_ID}</name>
            <description>{$SVI_DESC}</description>
            <ip>
              <address>
                <primary>
                  <address>{$ADDRESS}</address>
                  <mask>{$NETMASK}</mask>
                </primary>
              </address>
            </ip>
          </Vlan>
        </interface>
      </config>
    </device>
  </devices>
</config-template>